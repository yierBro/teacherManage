<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cpx.mapper.CategoryMapper">

    <resultMap id="categoryMap" type="com.cpx.entity.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="status" property="status"/>
    </resultMap>

    <insert id="insert" parameterType="com.cpx.entity.Category">
        INSERT INTO category(name,status) VALUES(#{name},#{status})
    </insert>

    <select id="findAllActive" resultMap="categoryMap">
        SELECT * FROM category WHERE status = 1
    </select>

    <!-- 新增：按 id 查询（编辑页回显） -->
    <select id="findById" resultMap="categoryMap" parameterType="int">
        SELECT * FROM category WHERE id = #{id}
    </select>

    <!-- 新增：更新 -->
    <update id="update" parameterType="com.cpx.entity.Category">
        UPDATE category
        SET name = #{name},
            status = #{status}
        WHERE id = #{id}
    </update>

</mapper>
